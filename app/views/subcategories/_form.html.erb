<%= form_with(model: subcategory) do |form| %>
  <div class="field">
    <%= form.label :parent_category, "Parent Category" %>
    <%= form.collection_select :category_id, categories, :id, :name, prompt: "Select a parent category" %>
  </div>

  <div class="field">
    <%= form.label :name, "Subcategory Name" %>
    <%= form.text_field :name, placeholder: "Enter subcategory name" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Subcategory" %>
  </div>
<% end %>
